<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/space"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70sp"></LinearLayout>

    <RelativeLayout
        android:id="@+id/title_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/space"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/monster_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_bug_report_black_24dp"
            android:layout_toStartOf="@+id/quiz_title" />

        <TextView
            android:id="@+id/quiz_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/monster_query"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            android:textColor="@android:color/background_dark"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10sp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/quiz_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/query_hints"
        android:layout_marginTop="30dp"
        android:paddingLeft="20sp"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_dark"
        android:gravity="fill_horizontal"
        android:layout_below="@+id/title_space" />

    <RelativeLayout
        android:id="@+id/number_space"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/quiz_hint"
        android:layout_alignParentStart="true"
        android:backgroundTint="@color/colorPrimaryDark">

        <TextView
            android:id="@+id/N_Back_Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="65sp"
            android:layout_centerInParent="true"
            android:textStyle="normal|bold"
            android:textColor="@android:color/black"
            android:text="7"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/N_Back_hint"
        android:layout_below="@+id/number_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/n_back_hint"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"/>

    <Button
        android:id="@+id/next_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Number"
        android:layout_below="@+id/N_Back_hint"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/next_btn"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/Correct"
            android:layout_width="120sp"
            android:layout_height="50sp"
            android:layout_gravity="center"
            android:text="Correct"
            android:layout_marginLeft="85dp"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/Wrong"
            android:layout_width="120sp"
            android:text="Wrong"
            android:layout_height="50sp"
            android:visibility="invisible"/>

    </LinearLayout>


</RelativeLayout>